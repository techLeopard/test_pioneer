<% provide(:title, @position.title) %>

<%= link_to '[back]', interview_stack_path %> |

<h1><%= @position.title %></h1>

<div class='stack-show-content-div'>
  <div class='stack-block'>
    <h4>Теория:</h4>
    <%= link_to '[new section]', new_position_section_path(@position, @section) %>
    <ul>
      <% @sections.each do |section| %>
        <li>
          <%= link_to section.title, position_section_path(@position, section) %>
          <ul>
            <% section.articles.each do |article| %>
              <li><%= link_to article.title, position_section_article_path(@position, section, article) %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>

  <div class='stack-block'>
    <h4>Инструменты:</h4>
    <!-- Дополнительный контент здесь -->
  </div>
</div>
