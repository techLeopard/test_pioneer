<% provide(:title, "Assignment") %>

<%= link_to '[back]', assignments_path %> |
<%= link_to '[edit]', edit_assignment_path(@assignment) %> |
<%= link_to '[delete]', @assignment, method: :delete, data: { confirm: 'Вы уверены?' } %>

<h1><%= @assignment.title %></h1>
<p>
  <strong>Company:</strong> <%= @assignment.company_name %>
</p>
<p>
  <strong>Link:</strong> <%= @assignment.link %>
</p>

<div class='article-content'>
  <%= @assignment.content.html_safe %>
</div>
