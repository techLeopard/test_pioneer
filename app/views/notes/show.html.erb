<% provide(:title, @note.title)%>

<%= link_to '[back]', interview_notes_path %>
<%= link_to '[edit]', edit_note_path(@note) %>
<%= link_to '[delete]', note_path(@note), method: :delete, data: { confirm: 'Вы уверены?' } %>

<div class="notes__content__div">
    <h1><%= @note.title %></h1>
    <h6 class='created-at'><%= @note.created_at.strftime("%B %d, %Y") %></h6>

    <p>
        <%= @note.content.html_safe %>
    </p>
</div>