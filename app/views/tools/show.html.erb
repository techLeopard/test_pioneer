<% provide(:title, @tool.title)%>

<div class='objects-navigation'>
    <%= link_to '[back]', tools_path %> |
    <%= link_to '[edit]', edit_tool_path(@tool) %> |
    <%= link_to '[delete]', tool_path(@tool), method: :delete, data: { confirm: 'Вы уверены?' } %>
</div>

<div class='content-div'>

    <div class="left-side-navbar">
        <div class='tool-card'>
            <div class='tool-card-logo-name'>
                <%= image_tag(@tool.logo_path, class: "tool-logo") %>
                <h2 class="tool-title"><%= @tool.title %></h2>
            </div>

            <div class='tool-card-category-link'>
                <p><%= @tool.category %></p>
                <p><%= @tool.platform %></p>
                <a href="<%= @tool.documentation_link %>" target='_blank'>Официальная документация</a>
            </div>
        </div>

    </div>

    <div class='description'>
        <div class='description-block'>    
            <h4>Описание</h4>
            <p><%= @tool.description.html_safe %></p>
        </div>

        <div class='description-block'>    
            <h4>Ключевая функциональность</h4>
            <%= link_to '[add feature]', new_tool_feature_path(@tool) %>
            <ul>
                <% @tool.features.each do |feature| %>
                <li><%= link_to feature.description, tool_feature_path(feature.tool, feature) %></li>
                <% end %>
            </ul>
        </div>

        <div class='description-block'>
            <h4>История</h4>
            <p><%= @tool.history.html_safe %></p>
        </div>

        <div class='description-block'>
            <h4>Статьи</h4>
            <%= link_to '[add article]', new_tool_post_path(@tool) %>
                <ul class='tool-posts-list'>
                    <% @tool.posts.each do |post| %>
                    <li><%= link_to post.title, tool_post_path(@tool, post) %></li>
                    <% end %>
                </ul>
        </div>
    </div>

</div>