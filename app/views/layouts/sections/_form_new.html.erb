<h1>Add a new section</h1>

<%= form_with(model: [@position, @section], local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "single-line-input-area" %>
  </div>

  <div class="actions">
    <%= form.submit "Сохранить" %>
  </div>
<% end %>

<%= link_to 'Назад', position_path(@position) %>