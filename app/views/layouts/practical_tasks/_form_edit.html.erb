<%= form_with(model: [@position, @section, @article, @practical_task], local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "single-line-input-area" %>
  </div>
  <div>
    <%= form.text_area :content, class: "tinymce" %>
    <%= tinymce %>
  </div>
  <div class="form-actions">
    <%= form.submit "Сохранить" %>
  </div>

<% end %>


<%= link_to 'Отмена', position_section_article_practical_tasks_path(@position, @section, @article, @practical_tasks) %>
