<%= form_with(model: [@section, @article], local: true) do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_area :title, class: "single-line-input-area" %>
  </div>

  <div>
    <%= form.text_area :content, class: "tinymce" %>
    <%= tinymce %>
  </div>

  <div class="form-actions">
    <%= form.submit "Сохранить изменения" %>
  </div>

<% end %>

<%= link_to 'Отмена', section_article_path(@section, @article) %>
