<%= form_with(model: [@position, @section, @article], local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "single-line-input-area" %>
  </div>
  <div>
    <%= form.text_area :content, class: "tinymce" %>
    <%= tinymce %>
  </div>
  <div class="form-actions">
    <%= form.submit "Создать Статью" %>
  </div>

<% end %>
