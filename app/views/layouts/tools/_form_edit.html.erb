<h1>Edit a tool name</h1>

<%= form_with(model: @tool, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "single-line-input-area" %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, class: "single-line-input-area" %>
  </div>

  <div class="field">
    <%= form.label :documentation_link %>
    <%= form.text_field :documentation_link, class: "single-line-input-area" %>
  </div>

  <div class="field">
    <%= form.text_area :description, class: "tinymce" %>
    <%= tinymce %>
  </div>

  <div class="form-actions">
    <%= form.submit "Сохранить изменения" %>
  </div>
<% end %>

<%= link_to 'Отмена', tool_path(@tool) %>